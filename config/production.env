# Production Environment Configuration
# Nordic Farm AI - Production Settings

# Environment
NODE_ENV=production
ENVIRONMENT=production

# Server Configuration
PORT=3001
FRONTEND_PORT=8081
CONTENT_AGENT_PORT=8030
INTEGRATION_PORT=8031

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/nordic_farm_ai
REDIS_URL=redis://localhost:6379

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Security
JWT_SECRET=your_super_secure_jwt_secret_key_here
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
API_RATE_LIMIT=1000
SESSION_SECRET=your_session_secret_key_here

# Drone Configuration
DRONE_CONNECTION_TIMEOUT=30000
DRONE_COMMAND_TIMEOUT=10000
DRONE_HEARTBEAT_INTERVAL=5000

# Content Agent Configuration
MAX_VIDEO_SIZE_MB=500
VIDEO_PROCESSING_TIMEOUT=300000
TEMP_DIRECTORY=/tmp/content_agent

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/nordic-farm-ai/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# File Storage
UPLOAD_DIRECTORY=/var/uploads
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=mp4,avi,mov,mp3,wav,jpg,png

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# External APIs
OPENAI_API_KEY=your_openai_api_key
WEATHER_API_KEY=your_weather_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=/var/backups

# Performance
CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
