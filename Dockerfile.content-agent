# Nordic Farm AI - Content Agent Service
FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    ffmpeg \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY services/agents/content-agent/requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY services/agents/content-agent/ ./

# Create non-root user
RUN groupadd -r contentagent && useradd -r -g contentagent contentagent

# Create necessary directories
RUN mkdir -p /var/log/nordic-farm-ai /var/uploads /tmp/content_agent
RUN chown -R contentagent:contentagent /var/log/nordic-farm-ai /var/uploads /tmp/content_agent

# Switch to non-root user
USER contentagent

# Expose port
EXPOSE 8030

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8030/v1/content/health || exit 1

# Start the application
CMD ["python", "-m", "uvicorn", "content_agent.app:app", "--host", "0.0.0.0", "--port", "8030"]
